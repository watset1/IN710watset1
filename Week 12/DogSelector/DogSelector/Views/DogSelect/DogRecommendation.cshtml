@model DogSelector.Models.Dog

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>DogRecommendation</title>
</head>
<body>
    <div class="content">
        <div class="container"> 
            <h4>We recommend:</h4><h2>@Model.DisplayName</h2>
            <div class="image">
                <img src="~/Dog%20Images/@Model.ImageName" />
            </div>
            <div class="qualities">
                <table>
                    <tr>
                        <td>Activity Level</td>
                        <td>@Model.ActivityLevel</td>
                    </tr>
                    <tr>
                        <td>Shedding Level</td>
                        <td>@Model.SheddingLevel</td>
                    </tr>
                    <tr>
                        <td>Grooming Level</td>
                        <td>@Model.GroomingLevel</td>
                    </tr>
                    <tr>
                        <td>Intelligence Level</td>
                        <td>@Model.IntelligenceLevel</td>
                    </tr>
                    <tr>
                        <td>Good With Children?</td>
                        <td>@Model.GoodWithChildren</td>
                    </tr>
                    <tr>
                        <td>Drools?</td>
                        <td>@Model.Drools</td>
                    </tr>
                    <tr>
                        <td>Coat Length</td>
                        <td>@Model.Coatlength</td>
                    </tr>
                    <tr>
                        <td>Size</td>
                        <td>@Model.Size</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="backButton">
            <a href="../DogSelect/DogSelector">Select Another Dog</a>
        </div>
    </div>
</body>
</html>
